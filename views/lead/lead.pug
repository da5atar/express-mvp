doctype html
html(lang='en')
  include ../common/header.pug
  //- invoke header mixin
  +header("Lead")
  body
    header
      //- navbar
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            //- listing of leads (view)
            h2 Lead
            //- note: leads is an array of objects
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Edit
                  th(scope="col") Delete
              tbody
                tr(id=lead.id)
                  td
                    span #{lead.email}
                  td
                    a(href="/lead/" + lead.id + "/edit") Edit
                  td 
                    form(action="/lead/" + lead.id + "/delete", method="POST")
                      button(type="submit").btn.btn-danger Delete
    include ../common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")
    